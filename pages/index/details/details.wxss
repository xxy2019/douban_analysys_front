.u-img-slide {
  width: 100%;
  height: 520rpx;
}
.content{
  background-color: #fff;
  padding: 20rpx;
  height: 614rpx;
}
.title{
  font-size: 42rpx;
  font-weight: bold;
}
.price{
  color: red;
}
.bottom{
  display: flex;
  border-top: solid #f2f2f2 1rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.btn{
  width: 13%;
  text-align: center;
  font-size: 24rpx;
}
.img{
  width: 40rpx;
  height: 40rpx;
}
.myBtn{
  display: flex;
  font-size: 32rpx;
  color: #fff;
  border-radius: 35rpx;
  height: 70rpx;
  width: 50%;
  background-color: #645FD7;
  margin: auto;
}
.cartBtn{
  width: 55%;
  text-align: center;
  border-right: #fff 2rpx solid;
  line-height: 70rpx;
}
.buyBtn{
  width: 45%;
  text-align: center;
  line-height: 70rpx;
}
.goodImg{
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.cart{
  display: flex;
  padding: 20rpx;
}
.cart_content{
  margin-top: 50rpx;
}
.cartType-active{
  background-color: rgba(101, 95, 215, 0.637);
}
.cartType{
  background-color: #645FD7;
}
.type{
  border-radius: 10rpx;
  height: 50rpx;
  width: 100rpx;
  line-height: 50rpx;
  margin-right: 20rpx;
  text-align: center;
  color: #fff;
}