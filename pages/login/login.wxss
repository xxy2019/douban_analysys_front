.bg{
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.title{
  padding-top: 10%;
  font-size: 36rpx;
  text-align: center;
  color: #fff;
}
.index{
  padding-top: 30%;
  font-size: 40rpx;
  display: flex;
  text-align: center;
}
.notactive{
  color: #fff;
  width: 50%;
}
.active{
  color: #333;
  width: 50%;
}
.login_content{
  padding: 60rpx;
  padding-top: 180rpx;
}
.register_content{
  padding: 60rpx;
  padding-top: 100rpx;
}
.avatar{
  overflow:hidden;  
  display: block;  
  width: 150rpx;  
  height: 150rpx;   
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.3);
  position: relative;
  margin: auto;
}
.avatar_img{
  width: 150rpx;
  height: 150rpx;
}
.line{
  display: flex;
  font-size: 36rpx;
  padding: 20rpx;
  margin: 60rpx 0;
  border: solid 1rpx #aaa;
  border-radius: 60rpx;
}
.line-active{
  box-shadow: 0 0 20rpx #24D0C2;
}
.form_img{
  width: 50rpx;
  height: 50rpx;
  margin-right: 50rpx;
}
.btn{
  background-color: #24D0C2;
  color: #fff;
  border-radius: 60rpx;
  margin-top: 80rpx;
}
.my_code{
  width:240rpx;
  height:80rpx;
  border:1px solid rgba(153,153,153,1);
  border-radius:29rpx;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}
.code_btn{
  float: right;
  background-color: #00B26A;
  color: #fff;
  position: relative;
  left: 28rpx;
  font-size: 36rpx;
}
.codebtn{
  float: right;
  background-color: rgba(0, 178, 106, .3);
  color: #fff;
  position: relative;
  left: 28rpx;
  font-size: 36rpx;
}
.forget{
  color: #999;
  text-align: center;
  margin-top: 30rpx;
  font-size: 32rpx;
}